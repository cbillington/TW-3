<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.travelexperts.travelpackages.MainActivity">
    <!-- cardview with textview-->

    <android.support.v7.widget.CardView
        android:id="@+id/cvAllTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        android:clickable="true"
        android:onClick="toggle_contents">
        <!--    <linearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="336dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/caribbean"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="38dp" />


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:text="Caribbean Getaway"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="303dp"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="This is the description for this package. the description goes here."
                card_view:layout_constraintLeft_toLeftOf="parent"
                tools:layout_conversion_absoluteHeight="16dp"
                tools:layout_conversion_absoluteWidth="101dp"
                tools:layout_conversion_absoluteX="117dp"
                tools:layout_conversion_absoluteY="236dp"
                tools:layout_editor_absoluteY="306dp" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Start Date"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintHorizontal_bias="0.054"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.75" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                card_view:layout_constraintHorizontal_bias="0.314"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="259dp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1500"
                card_view:layout_constraintHorizontal_bias="0.887"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="259dp" />

        </android.support.constraint.ConstraintLayout>
        <!--</linearLayout>-->
    </android.support.v7.widget.CardView>

    <!--textview item needs to be removed-->


</LinearLayout>